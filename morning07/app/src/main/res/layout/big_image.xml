<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">

        <ImageView
            android:id="@+id/big_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:src="@drawable/index" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <Button
        android:id="@+id/turnButton"
        android:text="turn"
        android:layout_width="62dp"
        android:layout_height="52dp"
        android:layout_marginEnd="17dp"
        tools:layout_editor_absoluteX="00dp"
        tools:layout_editor_absoluteY="0dp"
        android:onClick="turn"
        />

    <Button
        android:id="@+id/saveButton"
        android:layout_width="62dp"
        android:layout_height="52dp"
        android:onClick="save"
        android:text="save"
        tools:layout_editor_absoluteX="70dp"
        tools:layout_editor_absoluteY="0dp"
        android:visibility="invisible" />

    <Button
        android:id="@+id/cropButton"
        android:layout_width="62dp"
        android:layout_height="52dp"
        android:onClick="crop"
        android:text="crop"
        tools:layout_editor_absoluteX="140dp"
        tools:layout_editor_absoluteY="0dp" />

    </LinearLayout>

    <Button
        android:id="@+id/shareButton"
        android:layout_width="52dp"
        android:layout_height="52dp"
        android:contentDescription="sha"
        android:drawableEnd="@android:drawable/ic_menu_share"
        android:gravity="right"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        tools:layout_editor_absoluteY="16dp" />

    <Button
        android:id="@+id/deleteButton"
        android:layout_width="52dp"
        android:layout_height="52dp"
        android:layout_marginEnd="17dp"
        android:layout_marginBottom="17dp"
        android:contentDescription="sha"
        android:drawableEnd="@android:drawable/ic_delete"
        android:gravity="center_vertical|bottom|center_horizontal"
        android:visibility="visible"
        app:layout_constraintLeft_toRightOf="@+id/shareButton"
        tools:layout_editor_absoluteY="16dp" />



</android.support.constraint.ConstraintLayout>